html, body {
	height:100%;
	width: 100%;
    position: relative;
    display:table;
}


body {
	margin:0;
	font-family: 'Helvetica', Arial, sans-serif;
	font-size:12px;
	background: url(../images/background.jpg) no-repeat left top scroll; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    text-align: center;
}

p {
	
	font-weight: normal;
	margin:0px;
/*	text-transform: uppercase;*/
	line-height: 20px;
}

a {
	color:black;
    font-weight:bold;
    text-decoration: none; 
}
a:hover {
    text-decoration: underline;
}

h3 {
	font-weight: bold;
	font-size:18px;
	text-transform: capitalize;
	line-height: 20px;
	margin:6px 0;
}

hr {
	background: #999;
	height:1px;
	margin:20px 0;
	border: none;
    clear:both;
}

#wrapper {
	width: 100%;
	height: 100%;
  	margin:0;
/*	opacity: 0;*/
}

#logo-date {
	width:100%;
	max-width: 649px;
	/* text-align: center; */
	/* position: absolute; */
	padding-top:4%;
	/* left:-50%; */
	margin:0 auto;
}

#footer {
	/*position: fixed;*/
	bottom:0px;
	width:100%;
    padding:20px 0;
}

.container {
	background-color:rgba(255,255,255,.65);
	margin:20px auto;
	padding: 16px;
	width:230px;
	border-radius: 10px;
}

.description {
	text-transform: capitalize;
	padding:10px 0;
}

.shop-info {
    float:left;
    display:block;
    clear:both;
    width:100%;
}

/* MailChimp Form */
.mailchimp-form {
    position:relative;
    display:block;
    width:100%;
    clear:both;
    min-height:40px;
    margin-bottom:10px;
}
input {
    float:left;
    height:37px;
    outline:none;
    font-family: 'Helvetica', Arial, sans-serif;
	font-size:12px;
}
input[type="email"] {
    width:145px;
    display:block;
    border: 1px solid #999;
    border-radius:5px;
    margin:0;
    padding:10px;
    
}

input[type="submit"] {
    cursor:pointer;
    width:80px;
    display:block;
    border: none;
    border-radius:5px;
    margin-left:5px;
    padding:10px;
    background-color:#000;
    color:#fff;
    text-transform:capitalize;
}

/* Screen Sizes */
@media (max-width: 1024px) {
	#logo-date {
		max-width:500px;
	}
	#footer {
		padding-top:20px;
		position: relative;
	}
}

@media (max-height: 700px) {
	#footer {
		position: relative;
	}
}

